<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/overviewFragment">

    <fragment
        android:id="@+id/overviewFragment"
        android:name="nl.otters.elbho.views.fragments.OverviewFragment"
        android:label="OverviewFragment">
        <argument
            android:name="tabId"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
    <action
        android:id="@+id/action_global_overviewFragment"
        app:destination="@id/overviewFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    <fragment
        android:id="@+id/availabilityFragment"
        android:name="nl.otters.elbho.views.fragments.AvailabilityFragment"
        android:label="AvailabilityFragment" />
    <action
        android:id="@+id/action_global_availabilityFragment"
        app:destination="@id/availabilityFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    <fragment
        android:id="@+id/invoiceFragment"
        android:name="nl.otters.elbho.views.fragments.InvoiceFragment"
        android:label="InvoiceFragment">
        <action
            android:id="@+id/action_invoiceFragment_to_createInvoiceFragment"
            app:destination="@+id/createInvoiceFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <action
        android:id="@+id/action_global_invoiceFragment"
        app:destination="@id/invoiceFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    <fragment
        android:id="@+id/createInvoiceFragment"
        android:name="nl.otters.elbho.views.fragments.CreateInvoiceFragment"
        android:label="CreateInvoiceFragment" />

    <fragment
        android:id="@+id/vehicleFragment"
        android:name="nl.otters.elbho.views.fragments.VehicleFragment"
        android:label="VehicleFragment" />
    <action
        android:id="@+id/action_global_vehicleFragment"
        app:destination="@id/vehicleFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    <fragment
        android:id="@+id/trackingFragment"
        android:name="nl.otters.elbho.views.fragments.TrackingFragment"
        android:label="TrackingFragment" />
    <action
        android:id="@+id/action_global_trackingFragment"
        app:destination="@id/trackingFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    <fragment
        android:id="@+id/requestFragment"
        android:name="nl.otters.elbho.views.fragments.RequestFragment"
        android:label="RequestFragment" />
    <action
        android:id="@+id/action_global_requestFragment"
        app:destination="@id/requestFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim" />
</navigation>